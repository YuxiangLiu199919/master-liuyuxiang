<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.etc.springcloud.mapper.AddressMapper">

<!--  查询地址  -->
    <select id="queryAddress" resultType="Address">
        select * from address where user_id=#{uid}
    </select>
<!--保存地址-->
    <insert id="addAddress" parameterType="Address">
        insert into address values(null,#{uid},#{receiver_name},
                                   #{receiver_address},#{receiver_phone})
    </insert>
<!--更新地址-->
    <update id="updateAddress" parameterType="Address">
        update address set receiver_name=#{receiver_name},
                           receiver_address=#{receiver_address},
                           receiver_phone=#{receiver_phone}
        where user_id=#{uid}
    </update>
    <!--取消-->
    <delete id="deleteGoodsCart">
        delete from masterOrders where user_id=#{uid}
    </delete>


</mapper>